#!/bin/bash

hour=$(date +%H)
hour=$((hour % 12))
minute=$(date +%M)

if [ "$minute" -ge 45 ]; then
  hour=$((hour + 1))
  minute=00
elif [ "$minute" -ge 15 ]; then
  minute=30
else
  minute=00
fi

time="$(printf "%02d:%02d" "$hour" "$minute")"
case "$time" in
  "00:00") emoji="ğŸ•›" ;;
  "00:30") emoji="ğŸ•§" ;;
  "01:00") emoji="ğŸ•" ;;
  "01:30") emoji="ğŸ•œ" ;;
  "02:00") emoji="ğŸ•‘" ;;
  "02:30") emoji="ğŸ•" ;;
  "03:00") emoji="ğŸ•’" ;;
  "03:30") emoji="ğŸ•" ;;
  "04:00") emoji="ğŸ•“" ;;
  "04:30") emoji="ğŸ•Ÿ" ;;
  "05:00") emoji="ğŸ•”" ;;
  "05:30") emoji="ğŸ• " ;;
  "06:00") emoji="ğŸ••" ;;
  "06:30") emoji="ğŸ•¡" ;;
  "07:00") emoji="ğŸ•–" ;;
  "07:30") emoji="ğŸ•¢" ;;
  "08:00") emoji="ğŸ•—" ;;
  "08:30") emoji="ğŸ•£" ;;
  "09:00") emoji="ğŸ•˜" ;;
  "09:30") emoji="ğŸ•¤" ;;
  "10:00") emoji="ğŸ•™" ;;
  "10:30") emoji="ğŸ•¥" ;;
  "11:00") emoji="ğŸ•š" ;;
  "11:30") emoji="ğŸ•¦" ;;
  *) emoji="ğŸ•›" ;;
esac


echo $emoji
